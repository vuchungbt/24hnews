<%- include('../layout/admin-header') %>

<div class="container-fluid">
  <div class="row">
    <%- include('../layout/admin-sidebar') %>
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Quản lý Backup</h1>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Tạo Backup</h5>
            </div>
            <div class="card-body">
              <form action="/admin/backup/create" method="POST">
                <div class="mb-3">
                  <label class="form-label">Tên backup</label>
                  <input type="text" class="form-control" name="name" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Mô tả</label>
                  <textarea class="form-control" name="description" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Tạo Backup</button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Danh sách Backup</h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Tên</th>
                      <th>Ngày tạo</th>
                      <th>Thao tác</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (dashboard && dashboard.backups && dashboard.backups.length > 0) { %>
                      <% dashboard.backups.forEach(backup => { %>
                        <tr>
                          <td><%= backup.name %></td>
                          <td><%= new Date(backup.createdAt).toLocaleString('vi-VN') %></td>
                          <td>
                            <a href="/admin/backup/download/<%= backup._id %>" class="btn btn-sm btn-success">
                              <i class="fas fa-download"></i>
                            </a>
                            <button onclick="deleteBackup('<%= backup._id %>')" class="btn btn-sm btn-danger">
                              <i class="fas fa-trash"></i>
                            </button>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="3" class="text-center">Chưa có backup nào</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<script>
function deleteBackup(id) {
  if (confirm('Bạn có chắc chắn muốn xóa backup này?')) {
    fetch(`/admin/backup/delete/${id}`, {
      method: 'DELETE'
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        location.reload();
      } else {
        alert(data.message);
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Có lỗi xảy ra khi xóa backup');
    });
  }
}
</script>

<%- include('../layout/admin-footer') %> 