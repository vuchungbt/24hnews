<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= settings ? settings.siteName : 'Website Tin Tức' %></title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="<%= settings ? settings.siteFavicon : '/images/default-favicon.png' %>">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <style>
      .navbar {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        padding: 1rem 0;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1030;
      }

      .navbar-brand {
        color: #333;
        font-size: 1.5rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .navbar-brand i {
        color: #007bff;
      }

      .nav-link {
        color: #333;
        font-weight: 500;
        transition: color 0.3s ease;
      }

      .nav-link:hover {
        color: #007bff;
      }

      .nav-item-group {
        display: flex;
        align-items: center;
        gap: 1rem;
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .nav-item-group .nav-link {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        transition: all 0.3s ease;
      }

      .nav-item-group .nav-link:hover {
        background: rgba(0, 123, 255, 0.1);
      }

      .nav-item-group .nav-link:last-child {
        background: #007bff;
        color: white;
      }

      .nav-item-group .nav-link:last-child:hover {
        background: #0056b3;
      }

      .search-form {
        flex: 0 1 500px;
        margin: 0 1rem;
      }

      .search-wrapper {
        position: relative;
        display: flex;
        align-items: center;
      }

      .search-input {
        width: 100%;
        padding: 0.8rem 1rem;
        padding-right: 3rem;
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        background: rgba(255, 255, 255, 0.1);
        color: #333;
        font-size: 0.95rem;
        transition: all 0.3s ease;
      }

      .search-input:focus {
        outline: none;
        border-color: #007bff;
        background: rgba(255, 255, 255, 0.2);
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
      }

      .search-input::placeholder {
        color: #666;
        opacity: 0.8;
      }

      .search-button {
        position: absolute;
        right: 5px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        background: linear-gradient(45deg, #007bff, #00ff88);
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .search-button:hover {
        transform: translateY(-50%) scale(1.05);
        box-shadow: 0 3px 10px rgba(0, 123, 255, 0.2);
      }

      .user-menu {
        color: #333;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .user-menu:hover {
        background: rgba(255, 255, 255, 0.2);
        color: #007bff;
      }

      .dropdown-menu {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        padding: 0.5rem;
        z-index: 1031;
      }

      .dropdown-item {
        padding: 0.7rem 1rem;
        color: #333;
        border-radius: 10px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s ease;
      }

      .dropdown-item:hover {
        background: rgba(0, 123, 255, 0.1);
        color: #007bff;
      }

      .dropdown-item i {
        width: 20px;
      }

      @media (max-width: 991.98px) {
        .search-form {
          margin: 1rem 0;
          flex: 1 1 100%;
        }
        
        .navbar-collapse {
          background: rgba(255, 255, 255, 0.95);
          backdrop-filter: blur(10px);
          -webkit-backdrop-filter: blur(10px);
          padding: 1rem;
          border-radius: 15px;
          margin-top: 1rem;
          position: relative;
          z-index: 1031;
        }
      }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="align-items-center" >  
                <!-- Main Navigation -->
                <nav class="navbar navbar-expand-lg">
                    <div class="container">
                        <!-- Logo -->
                        <a class="navbar-brand" href="/">
                            <% if (settings && settings.siteLogo) { %>
                                <img src="<%= settings.siteLogo %>" 
                                     alt="<%= settings.siteName %>" 
                                     class="site-logo"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-block';">
                            <% } %>
                            <i class="fas fa-newspaper" style="<%= settings && settings.siteLogo ? 'display: none;' : '' %>"></i>
                            <span><%= settings ? settings.siteName : 'Tin Tức 24h' %></span>
                        </a>

                        <!-- Mobile Toggle -->
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                            <i class="fas fa-bars"></i>
                        </button>

                        <!-- Main Menu -->
                        <div class="collapse navbar-collapse" id="navbarContent">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/category/cong-nghe">Công Nghệ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/category/giai-tri">Giải Trí</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/category/kinh-doanh">Kinh Doanh</a>
                                </li>
                            </ul>

                            <!-- Search Form -->
                            <form class="search-form ms-auto" action="/search" method="GET">
                                <div class="search-wrapper">
                                    <input type="text" 
                                           name="q" 
                                           class="search-input" 
                                           placeholder="Tìm kiếm bài viết..."
                                           value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                                    <button type="submit" class="search-button">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>

                            <!-- User Menu -->
                            <% if (typeof user !== 'undefined' && user) { %>
                                <div class="dropdown">
                                    <a href="#" class="user-menu dropdown-toggle" data-bs-toggle="dropdown">
                                        <i class="fas fa-user-circle"></i>
                                        <%= user.username %>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <% if (user.role === 'admin') { %>
                                            <li>
                                                <a href="/admin/dashboard" class="dropdown-item">
                                                    <i class="fas fa-tachometer-alt"></i>
                                                    Quản trị
                                                </a>
                                            </li>
                                        <% } %>
                                        <li>
                                            <a href="/profile" class="dropdown-item">
                                                <i class="fas fa-user"></i>
                                                Hồ sơ
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a href="#" class="dropdown-item" id="logoutBtn">
                                                <i class="fas fa-sign-out-alt"></i>
                                                Đăng xuất
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            <% } else { %>
                                <ul class="nav-item-group">
                                    <li>
                                        <a href="/login" class="nav-link">Đăng nhập</a>
                                    </li>
                                    <li>
                                        <a href="/register" class="nav-link">Đăng ký</a>
                                    </li>
                                </ul>
                            <% } %>
                        </div>
                    </div>
                </nav> 
    </header>

    <!-- Category Menu -->
    <% if (typeof categories !== 'undefined' && categories) { %>
      <%- include('./category-menu') %>
    <% } %>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const logoutBtn = document.getElementById('logoutBtn');
        if (logoutBtn) {
            logoutBtn.addEventListener('click', async function(e) {
                e.preventDefault();
                try {
                    const response = await fetch('/api/auth/logout', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const data = await response.json();
                    
                    if (response.ok) {
                        window.location.href = '/';
                    } else {
                        alert(data.message || 'Đăng xuất thất bại');
                    }
                } catch (error) {
                    console.error('Logout error:', error);
                    alert('Đã xảy ra lỗi khi đăng xuất');
                }
            });
        }
    });
    </script>
</body>
</html> 